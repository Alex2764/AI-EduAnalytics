# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED VARIABLES
# ============================================

# Google Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
# Alternative: You can use SUPABASE_KEY instead of SUPABASE_ANON_KEY
# SUPABASE_KEY=your-supabase-service-role-key-here

# ============================================
# OPTIONAL VARIABLES
# ============================================

# Server Configuration
# Default: 8000
# PORT=8000

# Environment
# Options: development, production
# Default: development
# ENVIRONMENT=development

# API Documentation
# Set to false to disable /docs and /redoc endpoints in production
# Default: true
# ENABLE_DOCS=true

# CORS Configuration
# Comma-separated list of allowed origins
# Default: localhost origins for development
# Example: ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Cleanup Endpoint Protection
# Set this to protect the /api/cleanup endpoint in production
# CLEANUP_API_KEY=your-secure-random-key-here

# Supabase Storage (for templates)
# Set to true to use Supabase Storage instead of local file system
# Default: false
# USE_SUPABASE_STORAGE=false

# Supabase Storage Bucket Name
# Default: templates
# SUPABASE_STORAGE_BUCKET=templates
